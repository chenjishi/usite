<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/title_bar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/action_bar_height"
                android:background="@color/gray">
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/home_up_bg"
            android:clickable="true"
            android:onClick="onBackClicked"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
        <ImageView
                android:id="@+id/ic_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/back_arrow"
                android:layout_marginRight="4dp"
                android:adjustViewBounds="true"
                android:contentDescription="@null"
                android:scaleType="fitCenter"/>
        <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="@dimen/action_bar_subtitle_size"
                android:textColor="#666"
                android:text="@string/app_name"/>
    </LinearLayout>
    <ImageButton
            android:id="@+id/btn_share"
            android:layout_alignParentRight="true"
            android:onClick="onShareClicked"
            android:src="@drawable/ic_social_share"
            style="@style/ActionBarButtonStyle"/>
    <ImageButton
            android:id="@+id/btn_favorite"
            android:layout_toLeftOf="@id/btn_share"
            android:onClick="onFavoriteClicked"
            android:src="@drawable/ic_favorite"
            style="@style/ActionBarButtonStyle"/>
    <RelativeLayout
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:background="@drawable/home_up_bg"
            android:clickable="true"
            android:onClick="onCommentClicked"
            android:layout_toLeftOf="@id/btn_favorite">
        <ImageView
                android:id="@+id/ic_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_comment"
                android:layout_centerInParent="true"/>
        <com.chenjishi.u148.view.CircleView
                android:id="@+id/comment_count"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:visibility="gone"
                android:layout_toRightOf="@id/ic_comment"
                android:layout_marginLeft="-2dp"
                android:layout_marginTop="8dp"/>
    </RelativeLayout>
    <View
            android:id="@+id/split_h"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="#cacaca"/>
</RelativeLayout>
