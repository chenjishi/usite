<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:fresco="http://schemas.android.com/apk/res-auto"
                android:id="@+id/item_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/list_item_bkg"
                android:paddingLeft="8dp"
                android:paddingTop="12dp"
                android:paddingRight="8dp"
                android:paddingBottom="12dp">
    <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/image_view"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="16dp"
            fresco:placeholderImage="@drawable/user_default"
            fresco:actualImageScaleType="centerCrop"/>
    <TextView
            android:id="@+id/user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/image_view"
            android:textColor="@color/action_bar_bg"
            android:textSize="14sp"/>
    <TextView
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/text_color_regular"
            android:layout_toRightOf="@id/image_view"
            android:lineSpacingExtra="4dp"
            android:layout_below="@id/user_name"
            android:layout_marginTop="8dp"/>
    <LinearLayout
            android:id="@+id/reply_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="-16dp"
            android:visibility="gone"
            android:layout_toRightOf="@id/image_view"
            android:layout_below="@id/content">
        <View
                android:id="@+id/split_v"
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:layout_marginRight="8dp"
                android:background="#cacaca"/>
        <TextView
                android:id="@+id/reply"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="4dp"
                android:textColor="@color/text_color_weak"
                android:textSize="14sp"/>
    </LinearLayout>
</RelativeLayout>